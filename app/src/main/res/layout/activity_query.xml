<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashback"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".QueryActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/syncx"
        android:layout_gravity="center"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Queries"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:padding="5dp"
        ></TextView>

    <EditText
        android:id="@+id/etqueries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_back"
        android:hint="Type your Queries here"
        android:lines="10"
        android:gravity="left"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="14sp"></EditText>

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbtn_back"
        android:text="Submit"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"></Button>


</LinearLayout>